# =============================================================================
# Product Intelligence System - Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values as needed

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_USER=pis_user
POSTGRES_PASSWORD=pis_password
POSTGRES_DB=product_intelligence
POSTGRES_DATA_PATH=./database/postgreDB

# =============================================================================
# PgAdmin Configuration
# =============================================================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# =============================================================================
# Storage Paths
# =============================================================================
OLLAMA_DATA_PATH=./database/ollama
QDRANT_DATA_PATH=./database/qdrant
REDIS_DATA_PATH=./database/redis
DATA_PATH=./data

# =============================================================================
# Ollama Model Configuration
# =============================================================================
# Embedding model for vector generation
EMBEDDING_MODEL=bge-large
EMBEDDING_BATCH_SIZE=100

# LLM model for GenAI extraction in enrich mode
LLM_MODEL=llama3.2:3b
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000

# =============================================================================
# Application Configuration
# =============================================================================
LOG_LEVEL=INFO
